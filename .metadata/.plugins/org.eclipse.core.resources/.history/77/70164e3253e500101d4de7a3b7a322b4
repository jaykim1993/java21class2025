package ifexample;

import java.util.Scanner;

public class ifEx05 {

	public static void main(String[] args) {
		@SuppressWarnings("resource")
		Scanner scan = new Scanner(System.in);
		System.out.print("금액을 입력하세요 >> ");
		int price = scan.nextInt();
		
		int oman = price/50000;
		int omanNa = price%50000;
		
		int man = omanNa/10000;
		int manNa = omanNa%10000;
		
		int ochun =manNa/5000;
		int ochunNa = manNa%5000;
		
		int chun = ochunNa/1000;
		int chunNa = ochunNa%1000;
		
		int oback = chunNa /500;
		int obackNa = chunNa %500;
		
		int back = obackNa/100;
		System.out.printf( "오만원권 : %d매 \n만원권 : %d매 \n오천원권 : %d매\n천원권 : %d매 \n오백원 : %d매 \n백원 : %d매 \n" , oman, man, ochun, chun, oback,  back);
		
	}

}
