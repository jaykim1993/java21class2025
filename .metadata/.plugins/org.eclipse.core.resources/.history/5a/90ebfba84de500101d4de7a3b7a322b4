package ifexample;

import java.util.Scanner;

public class ifEx05 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.print("금액을 입력하세요 >> ");
		int price = scan.nextInt();
		int oman = price/50000;
		int omanNa = price%50000;
		System.out.println("오만원권 : " +oman);
		
		int man = omanNa/10000;
		int manNa = omanNa%10000;
		System.out.println("만원권 : "+  man);
		
		int ochun =manNa/5000;
		int ochunNa = manNa%5000;
		System.out.println("오천원권 : "+  ochun);
		
		int chun = ochunNa/50000;
		int chunNa = ochunNa%50000;
		System.out.println("천원권 : " + chun);
		
		int oback = chunNa /50000;
		int obackNa = chunNa %50000;
		System.out.println("오백원권 : "+  oback);
		
		int back = obackNa/50000;
		int backNa = obackNa%50000;
		System.out.println( "백원권 : " + back);
		
	}

}
