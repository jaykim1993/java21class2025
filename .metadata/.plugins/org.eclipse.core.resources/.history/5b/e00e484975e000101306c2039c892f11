package example;

public class OperateEx01 {

	public static void main(String[] args) {
		// ex1
			// ① 변수와 연산자를 이용하여 작성하시오.
			// ② 점수가 60점 이상이면 true 출력 되도록 작성하시오.
			// ③ int score = 30; 이용해 작성하시오.
			// ④ 아래 <출력 결과>와 같이 출력되도록 코드를 작성하시오.
		int score = 30;
		System.out.println(score > 60? true:false);
		
		// ex2
			// ① 변수와 연산자를 이용하여 작성하시오.
			// ② int money = 178600; 이용해 작성하시오.
			// ③ money 중 5000원짜리 이상 화폐를 제외한 1000원짜리가 3장 이상이면 true가 출력 되도록 작성하시오.
		int money = 178600;
		boolean result = (money % 5000) / 3 >= 3;
		System.out.println(result);
		
		// ex3
		// ① 변수와 연산자를 이용하여 작성하시오.
		// ② int kor = 100; int eng = 87; int math = 41; 이용해 작성하시오.
		// ③ 3과목의 평균이 60점 이상이면, true 단, 어느 한 과목이라도 50점 미만이면, false가 출력되도록작성하시오

	}

}
