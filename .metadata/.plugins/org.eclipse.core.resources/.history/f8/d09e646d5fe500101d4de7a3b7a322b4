package ifexample;

import java.util.Scanner;

public class ifEx05 {

	public static void main(String[] args) {
		@SuppressWarnings("resource")
		Scanner scan = new Scanner(System.in);
		System.out.print("금액을 입력하세요 >> ");
		int price = scan.nextInt();
		
		int oman = price/50000; // 몫 = 지폐개수
		int omanRemainder = price%50000; // 나머지
		
		int man = omanRemainder/10000;
		int manRemainder = omanRemainder%10000;
		
		int ochun =manRemainder/5000;
		int ochunRemainder = manRemainder%5000;
		
		int chun = ochunRemainder/1000;
		int chunRemainder = ochunRemainder%1000;
		
		int oback = chunRemainder /500;
		int obackRemainder = chunRemainder %500;
		
		int back = obackRemainder/100;
		System.out.printf( "오만원권 : %d매 %n만원권 : %d매 %n오천원권 : %d매%n천원권 : %d매 %n오백원 : %d매%n백원 : %d매%n" , oman, man, ochun, chun, oback,  back);
		
	}

}
