package ifexample;

import java.util.Scanner;

public class ifEx14 {

	public static void main(String[] args) {
		
		int cash = 20000; // 입금시 감소 , 출금시 증가
		int balance = 30000; // 입금시 증가 , 출금시 감소
		int account = 11111; // 로그인시 사용
		int password = 1234; // 로그인시 사용
		Scanner scan = new Scanner(System.in);
		System.out.println("===MEGA ATM===");
		System.out.println("1.로그인 2.종료");
		int login = scan.nextInt();
		if(login == 1) {
			System.out.println("계좌와 비밀번호를 입력하세요.");		
			int inputAccount = scan.nextInt();
			int inputPw = scan.nextInt();
			if(inputAccount == account && inputPw == password) {
				System.out.println("1.입금 2.출금 3.조회");
				int actionType = scan.nextInt();
				if(actionType == 1) {
					System.out.println("입금할 금액을 입력하세요.");
					int inputCash = scan.nextInt();
					if(inputCash > cash) {
						System.out.println("현금 잔액이 부족합니다.");
					} else {
						System.out.printf("입금 후 통장 잔액 : %d원%n입금 후 내 현금 잔액 : %d원%n", balance+inputCash, cash-inputCash);
					};
				};
				if(actionType == 2) {
					System.out.println("출금할 금액을 입력하세요.");
					int inputBalance = scan.nextInt();
					if(inputBalance > balance) {
						System.out.println("통잔 잔액이 부족합니다.");
					} else {
					System.out.printf("출금 후 통장 잔액 : %d원%n출금 후 내 현금 잔액 : %d원%n", balance-inputBalance , cash+inputBalance);
					};
				};
				if(actionType == 3) {
					System.out.printf("통장 잔액 : %d원%n현금 잔액 : %d원%n", balance, cash);
				};
			} else {
				System.out.println("잘못된 입력입니다.");
			}
		}
		if(login == 2) {System.out.println("종료");}
	}
	
}
