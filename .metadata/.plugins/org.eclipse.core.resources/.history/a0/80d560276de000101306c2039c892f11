package example;

public class DataEx01 {
//	System.out.print();    // 줄바꿈 X
//	System.out.println(); // 줄바꿈 O
//	System.out.printf();  // 포맷 출력
	public static void main(String[] args) {
		// char 데이터 타입 => 한 음절 표현 반드시 ''로 감싸야 함
			char ch = 'A'; // 변수란 값 (value, 여기선 'A')이 들어가는 번지주소를 이름으로 표현
			char ch2='a';
			System.out.println(ch);
			// (int)ch => 명시적 형변환
			// char인 데이터 타입의 형을 명시해서 int로 변형하는 것
			System.out.println((int)ch);
			System.out.println((int)ch2);
		
			int ch3 = 67;
			System.out.println((char)ch3);
		
		// String => 객체타입, 반드시 첫 글자는 대문자
			// 객체 타입의 변수에 저장되는 값은 실제값이 존재하는
			// 메모리의 번지 주소이다.
			String str="Abc";
			System.out.println("str번지 주소(10진수값): " + System.identityHashCode(str));
			int hexastr = System.identityHashCode(str); // 10진수로 번지 표현
			System.out.println("str번지 주소 헥사값: " + Integer.toHexString(hexastr)); // 16진수 헥사로 번지 표현
			
			String str2="홍길동";
			System.out.println(str);
			System.out.println(str2);
			
			// 이스케이프 문자 
			String str3 = "나는 \"자바\"를 좋아합니다.";
			System.out.println(str3);
			System.out.println("번호 \t이름\t직업");
			System.out.print("행 단위 출력");
			System.out.print("다음 줄 개행 \n");
			System.out.println("우리는 \"개발자\"입니다.");
			System.out.println("봄\\여름\\가을\\겨울");
			// 실무 방식
			System.out.printf("%-5s %-8s %-8s%n", "번호", "이름", "직업");
			System.out.printf("%-5d %-8s %-8s%n", 1, "홍길동", "개발자");
			System.out.printf("%-5d %-8s %-8s%n", 10, "김철수", "디자이너");
			//%-5s → 왼쪽 정렬 + 5칸 확보
			//%n → OS에 맞는 줄바꿈
			
			// byte 데이터 타입 => 1byte = 8bit
			// 범위 -128 ~ 127
			byte by1 = 127;
	//		byte by2 = 128; 오류뜸
		
		// long
			// 8byte = 64bit
			// int의 허용범위(32bit)를 벗어난 long 값은 접미사 L을 써야함
			long lo1 = 10000000000L; // 정수 범위 초과
			long lo2 = 1000000000;
			System.out.println(lo1); 
			System.out.println(lo2);
			
		// Float(4byte), Double(8byte)
		double do1 = 3.14;
		float flo1 = 3.14f;
//		float flo2 = 3.14; 접미사 f(F) 없으면 오류 출력
		
		// 논리타입(boolean)은 true/false 두가지 값
		boolean bool1 = true;
		boolean boo2 = false;
	}

}
